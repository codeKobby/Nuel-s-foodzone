rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Default-deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read and write to the collections.
    // The application logic itself (password prompts) is the primary gatekeeper.
    match /(orders|menuItems|miscExpenses|reconciliationReports|cashierAccounts|counters|credentials)/{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
