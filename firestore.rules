rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read menu items
    match /menuItems/{item} {
      allow read: if request.auth != null;
    }

    // Allow authenticated users to create, read, update, and delete orders and expenses
    match /orders/{orderId} {
      allow read, write, delete: if request.auth != null;
    }

    match /miscExpenses/{expenseId} {
      allow read, write, delete: if request.auth != null;
    }
    
    // Allow authenticated users to read reports
    match /reconciliationReports/{reportId} {
       allow read: if request.auth != null;
    }

    // Allow read/write on counters and credentials for app functionality
    match /counters/{counterId} {
        allow read, write: if request.auth != null;
    }
    
    match /credentials/{role} {
        allow read, write: if request.auth != null;
    }
  }
}
