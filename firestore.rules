rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access unless explicitly allowed.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read menu items.
    // Allow managers to create, update, and delete menu items.
    match /menuItems/{itemId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null; // Simplified for app logic
    }

    // Allow authenticated users to create and read orders.
    // Allow any authenticated user to update/delete (as cashiers need this).
    match /orders/{orderId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Allow authenticated users to create and read misc expenses.
    match /miscExpenses/{expenseId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Allow authenticated users to read reports.
    // Allow cashiers to create reports.
    match /reconciliationReports/{reportId} {
      allow read, create: if request.auth != null;
    }

    // Allow authenticated users to read/write to the order ID counter.
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow managers to manage cashier accounts.
    match /cashierAccounts/{accountId} {
      allow read, create, update, delete: if request.auth != null; 
    }

    // Allow authenticated reads for password verification and writes for updates.
    match /credentials/{role} {
      allow read, write: if request.auth != null;
    }
  }
}
