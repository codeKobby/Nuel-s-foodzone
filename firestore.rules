rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default-deny all access.
    match /{document=**} {
      allow read, write: if false;
    }

    // Helper function to check for an authenticated user
    function isAuthenticated() {
      return request.auth != null;
    }

    // Allow authenticated reads on most collections
    match /menuItems/{item} {
      allow read: if isAuthenticated();
    }
    match /orders/{order} {
      allow read: if isAuthenticated();
    }
    match /miscExpenses/{expense} {
      allow read: if isAuthenticated();
    }
    match /reconciliationReports/{report} {
      allow read: if isAuthenticated();
    }
    match /cashierAccounts/{accountId} {
        allow read: if isAuthenticated();
    }

    // Allow authenticated users to create/update their own orders and expenses
    match /orders/{orderId} {
        allow create, update: if isAuthenticated();
    }
    match /miscExpenses/{expenseId} {
        allow create: if isAuthenticated();
    }
    match /orders/{orderId} {
        allow delete: if isAuthenticated();
    }
     match /miscExpenses/{expenseId} {
        allow delete: if isAuthenticated();
    }

    // Allow full access for counters and credentials
    match /counters/{counter} {
      allow read, write: if isAuthenticated();
    }
    match /credentials/{role} {
      allow read, write: if isAuthenticated();
    }
    
    // Managers can manage menu items
    match /menuItems/{item} {
        allow create, update, delete: if isAuthenticated();
    }
    
    // Managers can create and update cashier accounts
    match /cashierAccounts/{accountId} {
      allow create, update: if isAuthenticated();
    }
  }
}