
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check user role from the 'users' collection
    function isManager(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'manager';
    }

    // Default: Deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Users Collection: Allow users to read and write to their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // MenuItems Collection: Publicly readable by any authenticated user, but only a manager can make changes.
    match /menuItems/{itemId=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isManager(request.auth.uid);
    }
    
    // Orders, Expenses, Reports, Counters: Accessible by any authenticated user (cashier or manager)
    match /(orders|miscExpenses|reconciliationReports)/{docId} {
      allow read, write: if request.auth != null;
    }
    match /counters/orderIdCounter {
        allow read, write: if request.auth != null;
    }

    // Credentials: Only managers can read or write passwords
    match /credentials/{role} {
        allow read, write: if request.auth != null && isManager(request.auth.uid);
    }

    // Cashier Accounts: Only managers can create, read, and update cashier accounts.
    match /cashierAccounts/{accountId=**} {
      allow read, write: if request.auth != null && isManager(request.auth.uid);
    }
  }
}
