
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for the menu
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if false; // Disallow client writes
    }

    // Allow authenticated users to read business data
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /miscExpenses/{expenseId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /reconciliationReports/{reportId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Allow authenticated reads for credentials (for password verification)
    match /credentials/{role} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Allow authenticated reads for the order ID counter
    match /counters/{counterId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Deny access to any other collection by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
