rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access to all documents
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read data required for the app to function
    match /menuItems/{itemId} {
      allow read: if request.auth != null;
    }

    match /orders/{orderId} {
      allow read, write, delete: if request.auth != null;
    }

    match /miscExpenses/{expenseId} {
      allow read, write, delete: if request.auth != null;
    }

    match /reconciliationReports/{reportId} {
      allow read: if request.auth != null;
    }

    // Allow read/write for counters and credentials for app functionality
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }

    match /credentials/{credentialId} {
      allow read, write: if request.auth != null;
    }
  }
}
