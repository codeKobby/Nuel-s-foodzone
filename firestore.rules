rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read menu items
    match /menuItems/{menuItem} {
      allow read: if request.auth != null;
    }
    
    // Allow managers to create, update, delete menu items
    match /menuItems/{menuItem} {
      allow write: if request.auth != null; // Simplified for app functionality
    }

    // Allow authenticated users to manage orders
    match /orders/{orderId} {
      allow read, write, delete: if request.auth != null;
    }

    // Allow authenticated users to manage miscellaneous expenses
    match /miscExpenses/{expenseId} {
      allow read, write, delete: if request.auth != null;
    }

    // Allow authenticated users to read reconciliation reports
    match /reconciliationReports/{reportId} {
      allow read: if request.auth != null;
    }
     // Allow authenticated users to write reconciliation reports
    match /reconciliationReports/{reportId} {
      allow create: if request.auth != null;
    }

    // Allow read/write for the order ID counter
    match /counters/orderIdCounter {
      allow read, write: if request.auth != null;
    }
    
    // Allow read/write for credentials (password management)
    match /credentials/{role} {
       allow read, write: if request.auth != null;
    }
    
    // Allow managers to manage cashier accounts
    match /cashierAccounts/{accountId} {
        allow read, write, create, delete: if request.auth != null;
    }
  }
}
