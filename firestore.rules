rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default to denying all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read menu items
    match /menuItems/{itemId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to manage the menu through AI tools
    match /menuItems/{itemId} {
      allow create, update, delete: if request.auth != null;
    }

    // Allow authenticated users to manage orders
    match /orders/{orderId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Allow authenticated users to manage miscellaneous expenses
    match /miscExpenses/{expenseId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Allow authenticated users to read reconciliation reports
    match /reconciliationReports/{reportId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to create reconciliation reports
    match /reconciliationReports/{reportId} {
      allow create: if request.auth != null;
    }
    
    // Allow authenticated users to read cashier accounts
    match /cashierAccounts/{accountId} {
        allow read: if request.auth != null;
    }

    // Allow authenticated users (managers) to create/update cashier accounts
    match /cashierAccounts/{accountId} {
        allow create, update: if request.auth != null;
    }

    // Allow authenticated users to read/write credentials (for password changes)
    match /credentials/{role} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to read/write the order ID counter
    match /counters/orderIdCounter {
      allow read, write: if request.auth != null;
    }
  }
}

    