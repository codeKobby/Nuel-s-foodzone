
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Menu items should be publicly readable by anyone using the app.
    // Writes are disabled as they should be handled by the admin panel's server-side logic.
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if false;
    }

    // Authenticated users (including anonymous ones) can read orders for display and counting.
    // Writes are disabled; they are handled securely by server-side logic in modals.
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false;
    }

    // Allow authenticated users to read expenses for display.
    // Writes are handled securely by server-side logic.
    match /miscExpenses/{expenseId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false;
    }

    // Allow authenticated users to read reports for history and dashboard views.
    // Writes are handled securely by server-side logic.
    match /reconciliationReports/{reportId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false;
    }

    // Credentials collection should never be accessible from the client.
    // All password verification and updates are done via server actions.
    match /credentials/{role} {
      allow read, write: if false;
    }

    // The order counter should only be modified by server-side transactions.
    match /counters/{counterId} {
      allow read, write: if false;
    }
  }
}
