
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default to denying all access.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow authenticated users to read menu items.
    match /menuItems/{menuItem} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to manage orders.
    match /orders/{orderId} {
      allow read, write, delete: if request.auth != null;
    }

    // Allow authenticated users to manage miscellaneous expenses.
    match /miscExpenses/{expenseId} {
      allow read, write, delete: if request.auth != null;
    }
    
    // Allow authenticated users to read reports.
    match /reconciliationReports/{reportId} {
        allow read: if request.auth != null;
    }

    // Allow authenticated users to read and write cashier account info.
    match /cashierAccounts/{accountId} {
        allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write credentials.
    match /credentials/{role} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write the order counter.
    match /counters/orderIdCounter {
        allow read, write: if request.auth != null;
    }
  }
}
