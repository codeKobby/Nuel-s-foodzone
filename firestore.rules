rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to perform actions on their own data
    // and public data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Menu items are public
    match /menuItems/{menuItem} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Orders can be managed by authenticated users
    match /orders/{orderId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Expenses can be managed by authenticated users
    match /miscExpenses/{expenseId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Reports can be read by authenticated users
    match /reconciliationReports/{reportId} {
      allow read, create: if request.auth != null;
    }
    
    // Credentials for password verification
    match /credentials/{role} {
      allow read, write: if request.auth != null;
    }

    // Cashier accounts can be managed by authenticated users (managers)
    match /cashierAccounts/{accountId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Order ID counter can be read and written by authenticated users
    match /counters/orderIdCounter {
      allow read, write: if request.auth != null;
    }
  }
}
